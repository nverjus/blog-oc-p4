{% extends 'layout.html.twig' %}
{% block title %}Modifier un commentaire -
{% endblock %}
{% block body %}
  <!-- Header -->
  <header>
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="intro-text">
            <span class="name">Modifier un commentaire</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <section>
    <div class="container">
      <div class="col-md-offset-3 col-md-6">
        {% if flash is not null %}
          <div class="alert alert-danger">
            <p>{{ flash }}</p>
          </div>
        {% endif %}
        <form method="post" action="/edit-comment-{{ comment.id }}">
          {{ form|raw }}
        </form>
      </div>
    </div>
  </section>
{% endblock %}
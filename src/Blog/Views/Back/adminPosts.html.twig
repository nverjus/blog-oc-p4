{% extends 'layout.html.twig' %}
{% block title %}Gérer les articles -
{% endblock %}
{% block body %}
  <!-- Header -->
  <header>
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="intro-text">
            <span class="name">Gérer les article</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <section>
    <div class="container">
      {% if flash is not null %}
        <div class="row">
          <div class="col-lg-12">
            <div class="alert alert-info">
              <p>{{ flash }}</p>
            </div>
          </div>
        </div>
      {% endif %}
      <div class="row">
        <a href="/add-post">
          <button type="button" class="btn btn-primary">Ajouter un post</button>
        </a>
        <br>
      </div>
      <div class="row">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Titre</th>
                <th>Modifier</th>
                <th>Supprimer</th>
              </tr>
            </thead>
            <tbody>
              {% for post in posts %}
                <tr>
                  <td>
                    <a href="/post-{{ post.id }}">{{ post.title }}</a>
                  </td>
                  <td>
                    <a href="/post-edit-{{ post.id }}">
                      <button type="button" class="btn btn-primary">
                        <i class="fa fa-edit fa-lg"></i>
                      </button>
                    </a>
                  </td>
                  <td>
                    <a href="/post-delete-{{ post.id }}">
                      <button type="button" class="btn btn-danger">
                        <i class="fa fa-close fa-lg"></i>
                      </button>
                    </a>
                  </td>
                  <td></td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
{% endblock %}
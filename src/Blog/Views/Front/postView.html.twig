{% extends 'layout.html.twig' %}
{% block title %}{{ post.title }}
  -
{% endblock %}
{% block body %}
  <!-- Header -->
  <header>
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="intro-text">
            <span class="name">{{ post.title }}</span>
            <hr class="star-light">
            <span class="skills">Publi√© le
              {{ post.updateDate|date('d-m-Y') }}
              par
              {{ post.user.name }}</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <section>
    <div class="container">
      <div class="row"></div>
      <p id="post-intro">{{ post.intro }}</p>
      <p id="post-content">{{ post.content|nl2br }}</p>
    </div>
  </section>

{% endblock %}
{% extends 'layout.html.twig' %}
{% block title %}Blog -
{% endblock %}
{% block body %}
  <!-- Header -->
  <header>
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="intro-text">
            <span class="name">Blog</span>
            <hr class="star-light">
            <span class="skills">Technologies du web et compagnie</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <section>
    <div class="container">
      <div class="row">
        {% if flash is not null %}
          <div class="alert alert-info">
            <p>{{ flash }}</p>
          </div>
        {% endif %}
        {% for post in posts %}
          <div class=" col-lg-offset-2 col-lg-8 col-md-10 mx-auto">
            <div class="post-preview">
              <a href="/post-{{ post.id }}">
                <h2 class="post-title">
                  {{ post.title }}
                </h2>
              </a>
              <p class="post-subtitle">{{ post.intro }}
                <br>
                <a href="/post-{{ post.id }}">Voir la suite</a>
              </p>

              <p class="post-meta">Publi√© le
                {{ post.updateDate|date("d/m/Y", false) }}</p>
            </div>
            <hr>

          </div>
        {% endfor %}
      </div>
      <div class="row">
        <div class="clearfix">
          {% if page > 1 %}
            <div class="col-sm-1">
              <a class="btn btn-primary" href="/{{ page-1 }}">&larr; Newer Posts</a>
            </div>
          {% endif %}
          {% if page < nbPages %}
            <div class="col-sm-offset-9 col-sm-1">
              <a class="btn btn-primary" href="/{{ page+1 }}">Older Posts &rarr;</a>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </section>

{% endblock %}
{% extends 'layout.html.twig' %}

{% block body %}
  <!-- Header -->
  <header>
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <img class="img-responsive" src="img/profile.png" alt="NV logo">
          <div class="intro-text">
            <span class="name">Nicolas Verjus</span>
            <hr class="star-light">
            <span class="skills">Un développeur PHP à votre service</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Portfolio Grid Section -->
  <section id="references">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2>Réferences</h2>
          <hr class="star-primary">
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6 portfolio-item">
          <a href="https://lauragiraud.com" class="portfolio-link">
            <div class="caption">
              <div class="caption-content">
                <i class="fa fa-search-plus fa-3x"></i>
              </div>
            </div>
            <img src="img/references/laurag.png" class="img-responsive" alt="">
          </a>
        </div>
        <div class="col-sm-6 portfolio-item">
          <a href="http://ddeb.nijus.fr" class="portfolio-link">
            <div class="caption">
              <div class="caption-content">
                <i class="fa fa-search-plus fa-3x"></i>
              </div>
            </div>
            <img src="img/references/ddeb.png" class="img-responsive" alt="">
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="success" id="about">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2>Outils</h2>
          <hr class="star-light">
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3 col-lg-offset-3">
          <ul class="textlist">
            <li>HTML/CSS</li>
            <li>PHP</li>
            <li>Symfony</li>
          </ul>
        </div>
        <div class="col-lg-3">
          <ul class="textlist">
            <li>Javascript</li>
            <li>WordPress</li>
            <li>Docker</li>
          </ul>
        </div>
        <div class="col-lg-8 col-lg-offset-2 text-center">
          <a href="CV_Nicolas_Verjus.pdf" class="btn btn-lg btn-outline">
            <i class="fa fa-download"></i>Télécharger le CV
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2>Contactez moi</h2>
          <hr class="star-primary">
        </div>
      </div>
      <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
          {% if flash is not null %}
            <div class="alert alert-success">
              <p>{{ flash }}</p>
            </div>
          {% endif %}
          <form method="post" action="/">
            {{ form|raw }}
          </form>
        </div>
      </div>
    </div>
  </section>

{% endblock %}